{
  "name": "@football-tcg/backend",
  "version": "1.0.0",
  "description": "Backend API für das Fußball-Sammelkartenspiel",
  "private": true,
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "dev": "tsx src/index.ts",
    "build": "tsc",
    "start": "tsx src/index.ts",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "type-check": "tsc --noEmit",
    "test": "jest",
    "test:unit": "jest --testPathIgnorePatterns=.*\\.feature\\.",
    "test:integration": "jest --config jest.integration.config.cjs",
    "test:integration:watch": "jest --config jest.integration.config.cjs --watch",
    "test:bdd": "jest --testNamePattern=\".*\\.feature\"",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:all": "npm run test:unit && npm run test:integration",
    "clean": "rm -rf dist node_modules",
    "kill-port": "node scripts/kill-port.js",
    "dev:clean": "npm run kill-port && npm run dev",
    "start:clean": "npm run kill-port && npm run start",
    "db:migrate": "prisma migrate dev",
    "db:generate": "prisma generate",
    "db:seed": "tsx src/db/seed.ts"
  },
  "prisma": {
    "seed": "tsx src/db/seed.ts"
  },
  "dependencies": {
    "@football-tcg/shared": "workspace:*",
    "@prisma/client": "^5.7.1",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "helmet": "^7.1.0",
    "joi": "^17.11.0",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "prisma": "^5.7.1",
    "sharp": "^0.33.1",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "@cucumber/cucumber": "^10.1.0",
    "@types/bcryptjs": "^2.4.6",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.8",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/morgan": "^1.9.9",
    "@types/multer": "^1.4.11",
    "@types/node": "^20.10.5",
    "@types/supertest": "^6.0.2",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "eslint": "^8.56.0",
    "jest": "^29.7.0",
    "jest-cucumber": "^4.5.0",
    "nodemon": "^3.0.2",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.0",
    "tsx": "^4.6.2",
    "typescript": "^5.3.3"
  }
}
