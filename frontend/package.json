{
  "name": "@football-tcg/frontend",
  "version": "1.0.0",
  "description": "Frontend für das Fußball-Sammelkartenspiel",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "vite",
    "dev:fast": "vite --host",
    "build": "tsc -b && vite build",
    "build:fast": "vite build",
    "preview": "vite preview",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "type-check": "tsc --noEmit",
    "test": "vitest run",
    "test:fast": "vitest run --no-coverage --reporter=basic",
    "test:watch": "vitest",
    "test:watch:fast": "vitest --no-coverage --reporter=basic",
    "test:coverage": "vitest run --coverage",
    "test:ui": "vitest --ui",
    "validate-translations": "node scripts/validate-translations.cjs",
    "validate-translations:fix": "node scripts/validate-translations.cjs --fix",
    "validate-translations:verbose": "node scripts/validate-translations.cjs --verbose",
    "clean": "rm -rf dist node_modules .vite"
  },
  "dependencies": {
    "@football-tcg/shared": "workspace:*",
    "i18next": "^25.3.2",
    "i18next-browser-languagedetector": "^8.2.0",
    "i18next-http-backend": "^3.0.2",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-i18next": "^15.6.1",
    "react-router-dom": "^6.28.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.30.1",
    "@testing-library/jest-dom": "^6.1.4",
    "@testing-library/react": "^14.1.2",
    "@types/i18next": "^13.0.0",
    "@types/react": "^19.1.8",
    "@types/react-dom": "^19.1.6",
    "@types/react-router-dom": "^5.3.3",
    "@types/uuid": "^10.0.0",
    "@vitejs/plugin-react": "^4.6.0",
    "@vitest/coverage-v8": "^2.0.0",
    "@vitest/ui": "^2.0.0",
    "eslint": "^9.30.1",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "globals": "^16.3.0",
    "jsdom": "^25.0.0",
    "typescript": "~5.8.3",
    "typescript-eslint": "^8.35.1",
    "uuid": "^11.1.0",
    "vite": "^7.0.4",
    "vitest": "^2.0.0"
  }
}
